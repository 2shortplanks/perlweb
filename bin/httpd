#!/bin/sh
if [ -z $CBROOT ]; then
  echo CBROOT environment variable not set
  exit 
fi

ROOT=${CBROOTLOCAL:-$CBROOT}

if [ ! -f $ROOT/combust.conf ]; then
  echo Could not find configuration file $ROOT/combust.conf
  exit
fi

HTTPD=`grep ^httpd $ROOT/combust.conf | cut -d= -f2 | sed 's/[[:space:]]//g'`

if [ -z $HTTPD ]; then
  echo Could not find "httpd = /path/bin/httpd" line in the combust.conf
  exit
fi

$HTTPD ${1+"$@"}

#echo ${1+"$@"} -X
#gdb $HTTPD 
