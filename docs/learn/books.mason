<h3><% $b->{section} %></h3>
%   } else {
% #$b->{description} =~ s/\n/<br>\n/g;

% if ($url) {
% $url !~ /^http:/ and $url = "/library/$url";
<b><a href="<% $url %>"><% $b->{title} %></a></b> (click on title to read)<br>
% }
% else {
<b><% $b->{title} %></b><br>
% }

<FONT SIZE="-2">
<% $b->{author} ? "by ". $b->{author} . "." : "" %>
<% $b->{pages} ? $b->{pages} . " pages." : "" %>
<% $b->{publisher} ? $b->{publisher} . "." : "" %>
