#!/bin/sh
if [ -z $CBROOT ]; then
  echo CBROOT environment variable not set 1>&2
  exit 2
fi

ROOT=${CBROOTLOCAL:-$CBROOT}

CONFIGFILE=${CBCONFIG:-$ROOT/combust.conf}

if [ ! -f $CONFIGFILE ]; then
  echo Could not find configuration file $CONFIGFILE 1>&2
  exit 2
fi

HTTPD=`grep ^httpd $CONFIGFILE | cut -d= -f2 | sed 's/[[:space:]]//g'`

if [ -z $HTTPD ]; then
  echo Could not find "httpd = /path/bin/httpd" line in the combust.conf 1>&2
  exit 2
fi

$HTTPD ${1+"$@"}

#echo ${1+"$@"} -X
#gdb $HTTPD 
