  <VirtualHost *:[% config.port %]>
    ServerName [% config.site.com.servername %]
    [% expandServerAliases( config.site.com.aliases ) %]
    PerlSetVar site com

    <Location />
       SetHandler perl-script
       PerlHandler Combust::Control::Basic->super
    </Location>

    <Location /error/>
       SetHandler   perl-script
       PerlHandler Combust::Control::Error->super
    </Location>

    <Location /redirect/>
       SetHandler   perl-script
       PerlHandler +PerlOrg::Control::Books->super
    </Location>

    <Location /server-status>
      SetHandler server-status
    </Location>

