<% $b->{author} || $b->{pages} || $b->{publisher} || $b->{pubdate} ? "<br>" : "" %>
</FONT>

<% $b->{description} ? "$b->{description}" : "" %>
% if ($b->{reviews}) {
<% join " - ", map { qq[<a target="_blank" href="$_">review</a>] } @{$b->{reviews}} %>
% }
<% ($b->{description}) ? "<br>" : "" %> 

% if (substr($b->{isbn},0,1) ne "X") {
