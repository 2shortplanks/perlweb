
  <VirtualHost *:[% config.port %]>
    ServerName [% config.site.dbi.servername %]
    [% expandServerAliases( config.site.dbi.aliases ) %]
    PerlSetVar site dbi
    <Location />
       SetHandler perl-script
       PerlHandler Combust::Control::Basic->super
    </Location>

    <Location /error/>
       SetHandler   perl-script
       PerlHandler Combust::Control::Error->super
    </Location>
  </VirtualHost>

