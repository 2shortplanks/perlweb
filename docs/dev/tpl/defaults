[%-  page = {
	    title = template.title,
            style = template.style or 'default.html'
    };

    IF r.uri.match("^/perl6/") ;
     page.site = "perl6";
     SET slashes = r.path_info.split("(/)");
     IF slashes.size < 5;
         page.style = "dev-nav.html";
     END ;
    END;

    IF r.uri.match("^/perl5/") ;
     page.site = "perl5";
     SET slashes = r.path_info.split("(/)");
     IF slashes.size < 5;
         page.style = "dev-nav.html";
     END ;
    END;

    IF r.uri.match("^/perl1/") ;
     page.site = "perl1";
    END;



    # don't include any whitespace from here...
 #   RETURN;
-%]

