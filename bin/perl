#!/bin/sh
if [ -z $CBROOT ]; then
  echo CBROOT environment variable not set
  exit 
fi

# funny bash syntax for setting ROOT to one or the other if the one isn't set
ROOT=${CBROOTLOCAL:-$CBROOT}

echo ROOT: $ROOT

if [ ! -f $ROOT/combust.conf ]; then
  echo Could not find configuration file $ROOT/combust.conf
  exit
fi

MYPERL=`grep ^perl $ROOT/combust.conf | cut -d= -f2 | sed 's/[[:space:]]//g'`

if [ -z $MYPERL ]; then
  echo Could not find "perl =" line in the combust.conf
  exit
fi

$MYPERL ${1+"$@"} 


